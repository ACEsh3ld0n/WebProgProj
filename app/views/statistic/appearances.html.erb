<h3>Appearances made</h3>


			<table class="table table-striped">
				<tr>
	    <th>Name</th>
	    <th>Surname</th>
	     <th>Appearances made</th>
			</tr>
			<% @appearance.each do |player| %>
			  <tr>
			    <td><%= player.name %></td>
			    <td><%= player.surname %></td>
			    <td><%= player.appearances %></td>
			  </tr>
			<% end %>
			</table>